{
  "id": "template-heat",
  "description": "Installation for Heat",
  "attributes": {
    "heat": {
      "debug": false,
      "max_header_line": 16384,
      "rabbitmq_instance": "none",
      "database_instance": "none",
      "stack_domain_admin": "heat_domain_admin",
      "stack_domain_admin_password": "",
      "keystone_instance": "none",
      "service_user": "heat",
      "service_password": "",
      "auth_encryption_key": "",
      "memcache_secret_key": "",
      "trusts_delegated_roles": [ "member" ],
      "api": {
        "protocol": "http",
        "cfn_port": 8000,
        "engine_port": 8001,
        "cw_port": 8003,
        "port": 8004
      },
      "db": {
        "password": "",
        "user": "heat",
        "database": "heat"
      },
      "ssl": {
        "certfile": "/etc/heat/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/heat/ssl/private/signing_key.pem",
        "generate_certs": false,
        "insecure": false,
        "cert_required": false,
        "ca_certs": "/etc/heat/ssl/certs/ca.pem"
      }
    }
  },
  "deployment": {
    "heat": {
      "crowbar-revision": 0,
      "crowbar-applied": false,
      "schema-revision": 300,
      "element_states": {
        "heat-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "heat-server" ]
      ],
      "element_run_list_order": {
        "heat-server": 101
      },
      "config": {
        "environment": "heat-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}


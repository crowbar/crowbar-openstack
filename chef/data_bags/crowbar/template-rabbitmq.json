{
  "id": "template-rabbitmq",
  "description": "Installation for rabbitmq",
  "attributes": {
    "rabbitmq": {
      "listen_public": false,
      "port": 5672,
      "password": "",
      "user": "nova",
      "vhost": "/nova",
      "ssl": {
        "enabled": false,
        "port": 5671,
        "certfile": "/etc/rabbitmq/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/rabbitmq/ssl/private/signing_key.pem",
        "insecure": false,
        "generate_certs": false,
        "cert_required": false,
        "ca_certs": "/etc/rabbitmq/ssl/certs/ca.pem",
        "client_ca_certs": "/etc/ssl/certs/rabbitca.pem"
      },
      "ha": {
        "storage": {
          "mode": "shared",
          "drbd": {
            "size": 50
          },
          "shared": {
            "device": "",
            "fstype": "",
            "options": ""
          }
        }
      },
      "trove": {
        "enabled": false,
        "password": "",
        "user": "trove",
        "vhost": "/trove"
      }
    }
  },
  "deployment": {
    "rabbitmq": {
      "crowbar-revision": 0,
      "crowbar-applied": false,
      "schema-revision": 100,
      "element_states": {
        "rabbitmq-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "rabbitmq-server" ]
      ],
      "config": {
        "environment": "rabbitmq-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [ ]
      }
    }
  }
}


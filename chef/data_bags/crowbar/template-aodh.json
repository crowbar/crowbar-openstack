{
  "id": "template-aodh",
  "description": "Installation for Aodh",
  "attributes": {
    "aodh": {
      "debug": false,
      "evaluation_interval": 600,
      "alarm_history_ttl": -1,
      "rabbitmq_instance": "none",
      "database_instance": "none",
      "keystone_instance": "none",
      "ceilometer_instance": "none",
      "service_user": "aodh",
      "service_password": "",
      "memcache_secret_key": "",
      "api": {
        "protocol": "http",
        "port": 8042
      },
      "db": {
        "password": "",
        "user": "aodh",
        "database": "aodh"
      },
      "ssl": {
        "certfile": "/etc/aodh/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/aodh/ssl/private/signing_key.pem",
        "generate_certs": false,
        "insecure": false,
        "cert_required": false,
        "ca_certs": "/etc/aodh/ssl/certs/ca.pem"
      }
    }
  },
  "deployment": {
    "aodh": {
      "crowbar-revision": 0,
      "crowbar-applied": false,
      "schema-revision": 202,
      "element_states": {
        "aodh-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "aodh-server" ]
      ],
      "element_run_list_order": {
        "aodh-server": 107
      },
      "config": {
        "environment": "aodh-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}

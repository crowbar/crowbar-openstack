{
  "id": "bc-template-quantum",
  "description": "API-enabled, pluggable virtual network service for OpenStack",
  "attributes": {
    "quantum": {
      "service_user": "quantum",
      "gitrepo": "http://github.com/openstack/quantum.git",
      "git_instance": "",
      "git_refspec": "stable/grizzly",
      "use_gitbarclamp": false,
      "use_pip_cache": false,
      "use_gitrepo": false,
      "rabbitmq_instance": "none",
      "use_virtualenv": false,
      "keystone_instance": "none",
      "pfs_deps": [
        "python-eventlet",
        "python-greenlet",
        "python-pastedeploy",
        "python-paste",
        "python-routes",
        "python-sqlalchemy",
        "python-migrate",
        "python-passlib",
        "python-lxml",
        "python-pam",
        "python-iso8601",
        "python-webob",
        "pip://python-keystoneclient"
      ],
      "debug": false,
      "verbose": false,
      "networking_mode": "gre",
      "use_syslog": false,
      "database_engine": "database",
      "database_instance": "none",
      "db": {
        "database": "quantum",
        "user": "quantum",
        "ovs_database": "ovs",
        "ovs_user": "ovs"
      },
      "sql": {
        "idle_timeout": 30,
        "min_pool_size": 5,
        "max_pool_size": 10,
        "pool_timeout": 200
      },
      "api": {
        "service_port": 9696,
        "service_host": "0.0.0.0"
      }
    }
  },
  "deployment": {
    "quantum": {
      "crowbar-revision": 0,
      "element_states": {
        "quantum-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
         ["quantum-server" ]
      ],
      "config": {
        "environment": "quantum-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}

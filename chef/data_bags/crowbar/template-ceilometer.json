{
  "id": "template-ceilometer",
  "description": "Installation for Ceilometer",
  "attributes": {
    "ceilometer": {
      "debug": false,
      "verbose": true,
      "use_mongodb": false,
      "alarm_threshold_evaluation_interval": 600,
      "cpu_interval": 600,
      "disk_interval": 600,
      "network_interval": 600,
      "meters_interval": 600,
      "metering_secret": "",
      "rabbitmq_instance": "none",
      "database_instance": "none",
      "keystone_instance": "none",
      "service_user": "ceilometer",
      "service_password": "",
      "api": {
        "protocol": "http",
        "port": 8777
      },
      "db": {
        "password": "",
        "user": "ceilometer",
        "database": "ceilometer"
      },
      "database": {
          "metering_time_to_live": 30,
          "event_time_to_live": 30
      },
      "aodh" : {
        "service_user": "aodh",
        "service_password": "",
        "api": {
          "protocol": "http",
          "port": 8042
        },
        "db": {
          "password": "",
          "user": "aodh",
          "database": "aodh"
        }
      }
    }

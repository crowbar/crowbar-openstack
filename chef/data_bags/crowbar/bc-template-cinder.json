{
  "id": "bc-template-cinder",
  "description": "Installation for Cinder",
  "attributes": {
    "cinder": {
      "debug": false,
      "verbose": false,
      "use_syslog": false,
      "rabbitmq_instance": "none",
      "keystone_instance": "none",
      "glance_instance": "none",
      "database_instance": "none",
      "service_user": "cinder",
      "service_password": "",
      "gitrepo": "http://github.com/openstack/cinder.git",
      "git_instance": "",
      "git_refspec": "stable/grizzly",
      "use_gitrepo": false,
      "use_gitbarclamp": false,
      "use_virtualenv": false,
      "use_pip_cache": false,
      "pfs_deps": [
        "kpartx",
        "parted",
        "gawk",
        "sqlite3",
        "sudo",
        "python-xattr",
        "python-lxml",
        "python-mox",
        "python-paste",
        "python-migrate",
        "python-gflags",
        "python-greenlet",
        "python-libvirt",
        "python-libxml2",
        "python-routes",
        "python-netaddr",
        "python-pastedeploy",
        "python-eventlet",
        "python-cheetah",
        "python-carrot",
        "python-tempita",
        "python-mysqldb",
        "python-sqlalchemy",
        "python-paramiko",
        "python-iso8601",
        "python-httplib2",
        "python-suds",
        "python-lockfile",
        "python-m2crypto",
        "python-boto",
        "python-kombu",
        "python-feedparser",
        "python-iso8601",
        "python-dateutil",
        "python-numpy",
        "lvm2",
        "open-iscsi",
        "open-iscsi-utils",
        "tgt",
        "python-amqplib",
        "python-boto",
        "python-webob",
        "pip://eventlet>=0.9.17",
        "pip://setuptools_git>=0.4",
        "pip://python-quantumclient>=2.0",
        "pip://python-glanceclient>=0.5.0,<2",
        "pip://python-swiftclient>=1,<2",
        "pip://python-novaclient",
        "pip://python-keystoneclient",
        "pip://Babel>=0.9.6",
        "pip://stevedore>=0.8.0"
      ],
      "volume": {
        "volume_name": "cinder-volumes",
        "volume_type": "raw",
        "cinder_raw_method": "all",
        "local_file": "/var/lib/cinder/volume.raw",
        "local_size": 2000,
        "eqlx": {
          "san_ip": "192.168.124.11",
          "san_login": "grpadmin",
          "san_password": "12345",
          "san_thin_provision": false,
          "eqlx_group_name": "group-0",
          "eqlx_use_chap": false,
          "eqlx_chap_login": "chapadmin",
          "eqlx_chap_password": "12345",
          "eqlx_ssh_keepalive_interval": 1200,
          "eqlx_cli_timeout": 30,
          "eqlx_pool": "default"
        },
        "netapp": {
          "netapp_wsdl_url": "http://192.168.124.11:8088/",
          "netapp_server_hostname": "192.168.124.11",
          "netapp_server_port": 8088,
          "netapp_login": "admin",
          "netapp_password": "admin",
          "netapp_storage_service": "",
          "netapp_storage_service_prefix": "crowbar_",
          "netapp_vfiler": "",
          "netapp_transport_type": "http",
          "netapp_volume_list": ""
        },
        "emc": {
          "emc_storage_type": "",
          "ecom_server_ip": "192.168.124.11",
          "ecom_server_port": 0,
          "ecom_server_username": "admin",
          "ecom_server_password": "admin"
        },
        "manual": {
          "driver": "",
          "config": ""
        }
      },
      "api": {
        "protocol": "http",
        "bind_open_address": true,
        "bind_port": 8776
      },
      "ssl": {
        "insecure": false,
        "certfile": "/etc/cinder/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/cinder/ssl/private/signing_key.pem",
        "cert_required": false,
        "ca_certs": "/etc/cinder/ssl/certs/ca.pem"
      },
      "db": {
        "password": "",
        "user": "cinder",
        "database": "cinder"
      }
    }
  },
  "deployment": {
    "cinder": {
      "crowbar-revision": 0,
      "element_states": {
          "cinder-controller": [ "readying", "ready", "applying" ],
          "cinder-volume": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
          [ "cinder-controller" ],
          [ "cinder-volume" ]
      ],
      "config": {
        "environment": "cinder-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}


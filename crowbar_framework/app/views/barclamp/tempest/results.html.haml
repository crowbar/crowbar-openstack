= stylesheet_link_tag @bc_name
:javascript
  $(document).ready(function() {
      $(".test_suite .toggle.on").toggleClass("on").each(function(){
        $('#' + $(this).attr('rel')).hide();
      });
  });

%h1.divided= t("barclamp.#{@bc_name}.results.title", :test_run => @test_run['uuid'])
.info
  %dl
    = dl_item(t("barclamp.#{@bc_name}.dashboard.test_run.node"), @test_run['node'])
    = dl_item(t("barclamp.#{@bc_name}.dashboard.test_run.started"), Time.at(@test_run['started']).to_s())
    = dl_item(t("barclamp.#{@bc_name}.dashboard.test_run.ended"), Time.at(@test_run['ended']).to_s())

= link_to t("barclamp.#{@bc_name}.results.raw_xml"), "#{@test_run['uuid']}.xml", :target => "_blank"
= render :file => @test_run['results.html']
